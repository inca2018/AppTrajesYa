<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/card1"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:elevation="5dp"
                >
                <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/promo1"
                    android:adjustViewBounds="true"

                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/card2"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:elevation="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/promo5"
                    android:adjustViewBounds="true"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/card3"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:elevation="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/promo3"
                    android:adjustViewBounds="true"
                   />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/card4"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:elevation="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/promo4"
                    android:adjustViewBounds="true"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TV y VIDEO"
                android:textColor="@color/negro"
                android:layout_margin="4dp"
                android:textSize="16sp"/>
       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/recycler1">
       </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RELOJES"
                android:textColor="@color/negro"
                android:layout_margin="4dp"
                android:textSize="16sp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recycler2">
            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCESORIOS PARA CELULARES"
                android:textColor="@color/negro"
                android:layout_margin="4dp"
                android:textSize="16sp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recycler3">
            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CELULARES Y SMARTPHONES"
                android:textColor="@color/negro"
                android:layout_margin="4dp"
                android:textSize="16sp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recycler4">
            </androidx.recyclerview.widget.RecyclerView>
         </LinearLayout>
    </ScrollView>
</FrameLayout>