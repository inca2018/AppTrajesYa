<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2dp">
            <TextView
                android:id="@+id/item_compra_num_pedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ENVIO 1"
                android:textAlignment="textStart"
                android:textColor="@color/negro"
                android:layout_margin="4dp"/>
            <TextView
                android:id="@+id/item_compra_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(26 al 20 de junio)"
                android:textAlignment="textStart"
                android:layout_margin="4dp"/>

            <ImageButton
                android:id="@+id/item_carrito_eliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:src="@drawable/ic_boton_delete"
                android:layout_gravity="right"
                android:background="@color/blanco" />
            <TextView
                android:id="@+id/item_carrito_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDD"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:layout_margin="2dp"
                android:textSize="12sp"
                android:inputType="textMultiLine"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="128dp"
             android:orientation="horizontal">

             <ImageView
                 android:id="@+id/item_carrito_foto"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="2"
                 android:src="@drawable/lcd1"
                 android:layout_margin="2dp"/>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:orientation="vertical"
                 android:gravity="center_vertical"
                 android:layout_margin="2dp"
                 android:padding="4dp">


                 <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:gravity="center"
                           android:layout_margin="4dp"
                     android:layout_gravity="left">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:text="Cantidad"
                         android:gravity="center"
                         android:layout_margin="4dp"
                         android:textSize="10sp"/>
                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:background="@color/SinCheck"
                         android:layout_margin="1dp">


                         <androidx.cardview.widget.CardView
                             xmlns:android="http://schemas.android.com/apk/res/android"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_margin="1dp"
                             >
                             <LinearLayout
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:orientation="horizontal"
                                 >

                         <Button
                             android:id="@+id/item_carrito_boton_menos"
                             android:layout_width="30dp"
                             android:layout_height="30dp"
                             android:text="-"
                             android:textStyle="bold"
                             android:textColor="@color/blanco"
                             android:background="@color/SinCheck"/>
                         <TextView
                             android:id="@+id/item_carrito_cantidad"
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:text="10"
                             android:gravity="center"
                             android:layout_margin="4dp"
                             android:textStyle="bold"/>
                         <Button
                             android:id="@+id/item_carrito_mas"
                             android:layout_width="30dp"
                             android:layout_height="30dp"
                             android:text="+"
                             android:textStyle="bold"
                             android:textColor="@color/blanco"
                             android:background="@color/SinCheck"/>
                             </LinearLayout>
                         </androidx.cardview.widget.CardView>

                     </LinearLayout>
                     </LinearLayout>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:layout_margin="4dp"
                     android:layout_gravity="center">

                     <TextView
                         android:id="@+id/item_carrito_precio"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="S/ 1200.00"
                         android:textColor="@color/rojo"
                         android:textStyle="bold"
                         android:textSize="16sp"
                         android:layout_margin="5dp"
                         android:layout_gravity="center"/>
                     <TextView
                         android:id="@+id/item_carrito_descontado"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="S/ 1000.00"
                         android:layout_margin="5dp"
                         android:textSize="12sp"
                         android:layout_gravity="center"

                         />
                     <TextView
                         android:id="@+id/item_carrito_desc"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="-50%"
                         android:layout_margin="5dp"
                         android:textSize="12sp"
                         android:layout_gravity="center"

                         />

                 </LinearLayout>




             </LinearLayout>



         </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
