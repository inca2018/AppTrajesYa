<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.fragmentItem">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <ScrollView
           android:id="@+id/scroll_Item"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <androidx.cardview.widget.CardView
                   xmlns:android="http://schemas.android.com/apk/res/android"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/card1"
                   app:cardBackgroundColor="@color/blanco"
                   android:layout_margin="4dp"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       >

                       <TextView
                           android:id="@+id/txtNombreProducto"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="NOMBRE DEL PRODUCTO"
                           android:textSize="22sp"
                           android:textColor="@color/base2"
                           android:textStyle="bold"
                           android:textAlignment="center"
                           android:layout_margin="4dp"
                           android:inputType="textMultiLine"/>


                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           >

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="vertical"
                               android:layout_margin="4dp"
                               android:layout_weight="1.2">
                               <inca.jesus.trajesya.clases.CarouselView
                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:id="@+id/pictureplay"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">
                                   <LinearLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:orientation="vertical"
                                       >

                                       <androidx.viewpager.widget.ViewPager
                                           android:id="@+id/viewpager"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:layout_weight="7"
                                           android:layout_gravity="center"
                                           />
                                       <LinearLayout
                                           android:id="@+id/viewGroup"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:layout_weight="10"
                                           android:orientation="horizontal"
                                           android:layout_gravity="center"
                                           android:gravity="center_vertical|right">
                                           <RadioGroup
                                               android:id="@+id/page_cusor_radioGroup"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               android:orientation="horizontal"
                                               android:gravity="center"
                                               ></RadioGroup>
                                       </LinearLayout>

                                       <LinearLayout
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:layout_weight="5"
                                           android:orientation="vertical">
                                           <TextView
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:text="CaracterÃ­sticas:"
                                               android:textColor="@color/colorPrimary"
                                               android:textStyle="bold"
                                               android:textSize="12sp"/>

                                           <TextView
                                               android:id="@+id/txtDescripcionProducto"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:text=""
                                               android:textAlignment="textStart"
                                               android:layout_margin="2dp"
                                               android:textSize="10sp"
                                               android:inputType="textMultiLine"
                                               />


                                       </LinearLayout>


                                   </LinearLayout>

                               </inca.jesus.trajesya.clases.CarouselView>



                           </LinearLayout>

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="vertical"
                               android:layout_margin="4dp"
                               android:layout_weight="1">



                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="vertical">
                                   <TextView
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"

                                       android:textAlignment="textStart"
                                       android:text="verificado por:"
                                       android:textSize="10sp"
                                       android:textColor="@color/negro"
                                       android:layout_margin="2dp"
                                       />

                                   <TextView
                                       android:id="@+id/txtVerificadoPor"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:textAlignment="textStart"
                                       android:text=""
                                       android:textSize="12sp"
                                       android:layout_margin="2dp"

                                       />
                               </LinearLayout>



                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="vertical">

                                   <TextView
                                       android:id="@+id/txtPrecioProducto"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:layout_weight="1"
                                       android:text="Alquiler:"
                                       android:textSize="18sp"
                                       android:textColor="@color/colorAccent"
                                       android:layout_margin="2dp"
                                       android:textAlignment="textStart"
                                       android:textStyle="bold"
                                       />
                                   <TextView
                                       android:id="@+id/txtDescuento"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:layout_weight="1"
                                       android:text=""
                                       android:textSize="16sp"
                                       android:textColor="@color/sombra"
                                       android:layout_margin="2dp"
                                       android:textAlignment="textStart"
                                       android:textStyle="bold"
                                       />

                               </LinearLayout>
                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="vertical">
                                   <TextView
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:text="Colores:"
                                       android:layout_margin="2dp"
                                       android:textColor="@color/colorPrimary"
                                       android:textStyle="bold"
                                       android:textSize="12sp"
                                       android:visibility="gone"/>
                                   <androidx.recyclerview.widget.RecyclerView
                                       android:id="@+id/recycler_colores"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_margin="4dp"
                                       android:visibility="gone">

                                   </androidx.recyclerview.widget.RecyclerView>
                                   <TextView
                                       android:id="@+id/tituloTalla"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:text=""
                                       android:layout_margin="2dp"
                                       android:textColor="@color/colorPrimary"
                                       android:textStyle="bold"
                                       android:textSize="12sp"/>
                                   <androidx.recyclerview.widget.RecyclerView
                                       android:id="@+id/recycler_medidas"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_margin="4dp">

                                   </androidx.recyclerview.widget.RecyclerView>

                               </LinearLayout>
                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="vertical"
                                   android:layout_margin="4dp">
                                   <TextView
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="2"
                                       android:text="Cantidad:"
                                       android:textAlignment="textStart"
                                       android:textSize="12sp"
                                       android:textColor="@color/colorPrimary"
                                       android:textStyle="bold" />

                                   <androidx.cardview.widget.CardView
                                       xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"
                                       app:cardCornerRadius="12dp"
                                       android:layout_margin="2dp"
                                       android:elevation="10dp"
                                       android:backgroundTint="#e3f2fd"
                                       android:background="#e3f2fd"
                                       app:cardBackgroundColor="#e3f2fd"
                                       >
                                       <LinearLayout
                                           android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           android:orientation="horizontal"
                                           >

                                           <Button
                                               android:id="@+id/menos"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:layout_weight="1"
                                               android:textSize="16sp"
                                               android:text="-"
                                               android:textStyle="bold"
                                               android:textColor="@color/negro"
                                               android:background="@android:color/transparent"/>
                                           <TextView
                                               android:id="@+id/cantidad"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               android:layout_weight="1"
                                               android:text="0"
                                               android:gravity="center"
                                               android:textStyle="bold"
                                               android:textSize="16sp"
                                               android:background="@color/blanco"/>
                                           <Button
                                               android:id="@+id/mas"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:layout_weight="1"
                                               android:textSize="16sp"
                                               android:text="+"
                                               android:textStyle="bold"
                                               android:textColor="@color/negro"
                                               android:background="@android:color/transparent"/>
                                       </LinearLayout>
                                   </androidx.cardview.widget.CardView>


                               </LinearLayout>


                               <androidx.cardview.widget.CardView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:backgroundTint="@color/colorPrimary"
                                   android:background="@color/colorPrimary"
                                   app:cardBackgroundColor="@color/colorPrimary"
                                   app:cardCornerRadius="12dp"
                                   android:layout_margin="2dp">

                                   <Button
                                       android:id="@+id/btnAgregarReserva"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"
                                       android:textAlignment="center"
                                       android:text="AGREGAR "
                                       android:textSize="16dp"
                                       android:textColor="@color/blanco"
                                       android:background="@android:color/transparent"
                                       android:layout_margin="2dp"
                                       android:drawableRight="@drawable/add_reserva_nueva"
                                       android:padding="8dp"
                                       />
                               </androidx.cardview.widget.CardView>

                               <androidx.cardview.widget.CardView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:backgroundTint="@color/colorAccent"
                                   app:cardBackgroundColor="@color/colorAccent"
                                   app:cardCornerRadius="12dp"
                                   android:layout_margin="2dp">
                                   <Button
                                       android:id="@+id/btnReservar"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_weight="1"
                                       android:textAlignment="center"
                                       android:text="RESERVAR"
                                       android:textSize="16dp"
                                       android:textColor="@color/blanco"
                                       android:background="@android:color/transparent"
                                       android:layout_margin="2dp"
                                       />
                               </androidx.cardview.widget.CardView>

                           </LinearLayout>



                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:layout_margin="4dp"
                           android:padding="6dp">

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_weight="1"
                               android:text="Delivery"
                               android:textColor="@color/negro"
                               android:textSize="12sp"
                               android:gravity="center"
                               android:layout_margin="2dp"
                               android:drawableLeft="@mipmap/ic_delivery_v2"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_weight="1"
                               android:text="Contraentrega"
                               android:textColor="@color/negro"
                               android:textSize="12sp"
                               android:gravity="center"
                               android:layout_margin="2dp"
                               android:drawableLeft="@mipmap/ic_contraentrega_v2"/>

                       </LinearLayout>
                   </LinearLayout>

               </androidx.cardview.widget.CardView>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">


                   <TextView
                       android:id="@+id/txtNombreCategoria"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="4dp"
                       android:text=""
                       android:textColor="@color/negro"
                       android:textSize="16sp" />

                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/recycler_similares1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="4dp"></androidx.recyclerview.widget.RecyclerView>

                   <TextView
                       android:id="@+id/txtNombreSubCategoria"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="4dp"
                       android:text=""
                       android:textColor="@color/negro"
                       android:textSize="16sp" />

                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/recycler_similares2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="4dp"></androidx.recyclerview.widget.RecyclerView>

               </LinearLayout>

           </LinearLayout>
       </ScrollView>

   </LinearLayout>
</FrameLayout>