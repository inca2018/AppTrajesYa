<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="inca.jesus.trajesya.fragmentos.SesionFragment">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/modulo1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                     android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/SectorLogo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/sombra_base_light"
                        android:orientation="horizontal">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/sesion_imagen"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                tools:ignore="RtlHardcoded" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/sesion_nombre"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Jesus Inca Cardenas"
                                android:textColor="@color/sombra"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:gravity="bottom"
                                />

                            <TextView
                                android:id="@+id/correo_user"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="jic_d12@hotmail.com"
                                android:textSize="16sp"
                                android:textColor="@color/sombra"
                                android:gravity="top"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/OpcionCompletarInformacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/deseo"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/OpcionesUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/bt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="MIS RESERVAS"
                            android:textAlignment="textStart"
                            android:textColor="@color/SinCheck"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtUbicaciones"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="MIS UBICACIONES DE ENTREGA"
                            android:textAlignment="textStart"
                            android:textColor="@color/SinCheck"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/sombra"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp">

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/OpcionesUsuarioExtras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/perfil_op1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Tèrminos y Condiciones de Usuario"
                            android:textAlignment="textStart"
                            android:textColor="@color/SinCheck"
                            android:textSize="18sp"
                            />
                        <TextView
                            android:id="@+id/perfil_op2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Politica General de Alquiler"
                            android:textAlignment="textStart"
                            android:textColor="@color/SinCheck"
                            android:textSize="18sp"
                              />
                        <TextView
                            android:id="@+id/perfil_op3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Privacidad y Confidencialidad"
                            android:textAlignment="textStart"
                            android:textColor="@color/SinCheck"
                            android:textSize="18sp"
                             />
                        <TextView
                            android:id="@+id/perfil_op4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Preguntas Frecuentes"
                            android:textAlignment="textStart"
                            android:textColor="@color/SinCheck"
                            android:textSize="18sp"
                             />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/boton_cerrar_sesion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/gradiente"
                            android:padding="15dp"
                            android:text="CERRAR SESIÓN"
                            android:textAlignment="center"
                            android:textColor="@color/blanco"
                            android:textStyle="bold"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/modulo2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tituloOpcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="TITULO DE OPCION:"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tituloDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:inputType="textMultiLine"
                        android:text="" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/regresar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradiente"
                            android:text="REGRESAR"
                            android:textColor="@color/blanco" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/SectorRegistro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <LinearLayout
                        android:id="@+id/SectorLogoRegistro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/sombra_base">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivRegistroImagen"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:src="@drawable/default_imagen"
                            tools:ignore="RtlHardcoded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/SinCheck"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="INFORMACIÓN DE USUARIO"
                            android:textColor="@color/SinCheck"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:passwordToggleTint="@color/colorAccent2">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRegistroNombre"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Nombres"
                                android:inputType="text"
                                android:maxLength="30"
                                android:textSize="18sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:passwordToggleTint="@color/colorAccent2">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRegistroApellido"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Apellidos"
                                android:inputType="text"
                                android:maxLength="30"
                                android:textSize="18sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:passwordToggleTint="@color/colorAccent2">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRegistroDni"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:digits="0123456789"
                                android:hint="Dni"
                                android:inputType="number"
                                android:maxLength="8"
                                android:textSize="18sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:passwordToggleTint="@color/colorAccent2">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRegistroCorreo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Correo Electrónico"
                                android:inputType="textEmailAddress"
                                android:maxLength="50"
                                android:textSize="18sp" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="REGISTRO DE USUARIO"
                            android:textColor="@color/SinCheck"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:passwordToggleTint="@color/colorAccent2">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRegistroUsuario"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/usuario"
                                android:inputType="text"
                                android:maxLength="20"
                                android:textSize="18sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="@color/colorAccent2">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRegistroPassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/contrase_a"
                                android:imeActionLabel="login"
                                android:imeOptions="actionDone"
                                android:inputType="textPassword"
                                android:maxLength="20"
                                android:textSize="18sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:elevation="5dp"
                            app:cardCornerRadius="2dp">

                            <Button
                                android:id="@+id/btnRegistrarUsuario"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradiente"
                                android:text="@string/ingresar"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/SectorLoginFB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="BIENVENIDO INVITADO"
                        android:textColor="@color/SinCheck"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Ingrese con Facebook"
                        android:textColor="@color/SinCheck"
                        android:textSize="16sp"
                     />


                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/loginFbSesion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:elevation="2dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/SectorUbicaciones"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="8dp">

                        <ImageView
                            android:id="@+id/ivRegresarPerfil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:src="@drawable/arrow_left" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:text="Regresar al Perfil"
                            android:textAlignment="center"
                            android:textColor="@color/SinCheck"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:elevation="5dp"
                            app:cardCornerRadius="2dp"
                            android:layout_marginTop="10dp">

                            <Button
                                android:id="@+id/btnAgregarUbicacion"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradiente"
                                android:text="Agregar"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/SinCheck"
                        android:textStyle="bold"
                        android:text="MIS UBICACIONES REGISTRADAS"
                        android:textSize="16sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerMisUbicaciones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"></androidx.recyclerview.widget.RecyclerView>



                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>
</FrameLayout>
