<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="inca.jesus.trajesya.Fragmentos.SesionFragment">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/modulo1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/SectorLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/celeste_bjo">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/sesion_imagen"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        tools:ignore="RtlHardcoded"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_margin="4dp">

                    <TextView
                        android:id="@+id/sesion_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Jesus Inca Cardenas"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_margin="4dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/correo_user"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:textSize="16sp"
                        android:text="jic_D12@hotmail.com"
                        android:gravity="center"
                        />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/OpcionCompletarInformacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/deseo"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/OpcionesUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                 >

                <Button
                    android:id="@+id/bt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Mi Perfil"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/base2"/>
                <Button
                    android:id="@+id/bt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Mis Ubicaciones de Entrega"
                    android:textSize="18sp"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    android:textColor="@color/base2"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/SinCheck">

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/OpcionesUsuarioExtras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="4dp">
                <Button
                    android:id="@+id/perfil_op1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Terminos y Condiciones de Usuario"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="14sp"
                    android:textAlignment="textStart"
                    android:layout_margin="2dp"/>
                <Button
                    android:id="@+id/perfil_op2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Politica General de Alquiler"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="14sp"
                    android:textAlignment="textStart"
                    android:layout_margin="2dp"/>
                <Button
                    android:id="@+id/perfil_op3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Privacidad y Confidencialidad"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="14sp"
                    android:textAlignment="textStart"
                    android:layout_margin="2dp"/>

                <Button
                    android:id="@+id/perfil_op4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Preguntas Frecuentes"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="14sp"
                    android:textAlignment="textStart"
                    android:layout_margin="2dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom">
                <Button
                    android:id="@+id/boton_cerrar_sesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradiente"
                    android:text="CERRAR SESIÓN"
                    android:textColor="@color/blanco"
                    android:textSize="16sp"

                    android:textAlignment="center"
                    android:padding="15dp"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/modulo2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tituloOpcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="TITULO DE OPCION:"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tituloDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="textMultiLine"
                android:text="" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom">
                <Button
                    android:id="@+id/regresar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradiente"
                    android:text="REGRESAR"
                    android:textColor="@color/blanco" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SectorRegistro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">


            <LinearLayout
                android:id="@+id/SectorLogoRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivRegistroImagen"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    tools:ignore="RtlHardcoded"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/default_imagen"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/SinCheck">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/SinCheck"
                    android:textStyle="bold"
                    android:text="INFORMACIÓN DE USUARIO"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleTint="@color/colorAccent2"
                    android:layout_margin="4dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRegistroNombre"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Nombres"
                        android:inputType="text"
                        android:maxLength="25"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleTint="@color/colorAccent2"
                    android:layout_margin="4dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRegistroApellido"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Apellidos"
                        android:inputType="text"
                        android:maxLength="25"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleTint="@color/colorAccent2"
                    android:layout_margin="4dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRegistroDni"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Dni"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:maxLength="8"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleTint="@color/colorAccent2"
                    android:layout_margin="4dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRegistroCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Correo Electrónico"
                        android:inputType="textEmailAddress"
                        android:maxLength="25"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/SinCheck"
                    android:textStyle="bold"
                    android:text="REGISTRO DE USUARIO"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleTint="@color/colorAccent2"
                    android:layout_margin="4dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRegistroUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/usuario"
                        android:inputType="text"
                        android:maxLength="20"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorAccent2"
                    android:layout_margin="4dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRegistroPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/contrase_a"
                        android:imeActionLabel="login"
                        android:maxLength="20"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    app:cardCornerRadius="2dp"
                    android:layout_margin="4dp">
                    <Button
                        android:id="@+id/btnRegistrarUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradiente"
                        android:text="@string/ingresar"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/SectorLoginFB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/SinCheck"
                android:textStyle="bold"
                android:text="INGRESAR CON FACEBOOK"
                android:textSize="16sp" />


            <com.facebook.login.widget.LoginButton
                android:id="@+id/loginFbSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="2dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textAlignment="center"
                android:textSize="12sp"
                  />
        </LinearLayout>


    </LinearLayout>


    </ScrollView>

    </LinearLayout>
</FrameLayout>
