<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                >
            <ImageView
                android:id="@+id/card_list_imagen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/lap13"
                android:layout_margin="2dp"
                android:padding="10dp"
                android:layout_gravity="center"

                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/card_list_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:inputType="textMultiLine"
                    android:text="DDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDD"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"/>
                <TextView
                    android:id="@+id/item_d1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio PromociÃ³n: S/ 1200.00"
                    android:textColor="@color/rojo"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_margin="2dp"
                    android:textAlignment="textStart"
                    android:paddingLeft="20dp"/>
                <TextView
                    android:id="@+id/item_d2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio miCumple: S/ 1000.00"
                    android:layout_margin="2dp"
                    android:textSize="12sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorAccent"
                    android:paddingLeft="20dp"

                    />
                <TextView
                    android:id="@+id/item_d3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Acumulas 100 puntos"
                    android:layout_margin="2dp"
                    android:textSize="12sp"
                    android:textAlignment="textStart"
                    android:paddingLeft="20dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="2dp">
                <RatingBar
                    android:id="@+id/card_list_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:isIndicator="true"
                    android:progressTint="#FDDB39"
                    android:progressBackgroundTint="@color/colorAccent"
                    android:rating="5"
                    android:secondaryProgressTint="#FDDB39"
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:id="@+id/card_list_cant_resenas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(20)"
                    android:layout_margin="10dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
