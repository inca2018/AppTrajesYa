<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/blanco"
    android:background="@color/blanco"
    app:cardBackgroundColor="@color/blanco"
    app:cardCornerRadius="12dp"
    android:layout_margin="2dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:background="@color/colorPrimary"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="12dp"
            android:layout_margin="4dp">

            <Button
                android:id="@+id/btnCompletarRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="COMPLETAR REGISTRO DE SESION"
                android:textSize="16dp"
                android:textColor="@color/blanco"
                android:background="@android:color/transparent"
                android:layout_margin="2dp"
                android:drawableRight="@drawable/add_reserva_nueva"
                android:padding="8dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/deseo"
            android:background="@color/deseo"
            app:cardBackgroundColor="@color/deseo"
            app:cardCornerRadius="12dp"
            android:layout_margin="4dp">

            <Button
                android:id="@+id/btnSeguirNavegando"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="SEGUIR NAVEGANDO"
                android:textSize="16dp"
                android:textColor="@color/blanco"
                android:background="@android:color/transparent"
                android:layout_margin="2dp"
                android:drawableRight="@drawable/add_reserva_nueva"
                android:padding="8dp"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.cardview.widget.CardView>
