<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/blanco"
    app:cardElevation="2dp"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDistritoUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_thin"
                android:inputType="textMultiLine"
                android:text="LOS OLIVOS"
                android:textColor="@color/negro"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <ImageView
                    android:id="@+id/ivEliminarUbicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_boton_delete" />
            </RelativeLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/txtNombreUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:fontFamily="@font/roboto_thin"
            android:inputType="textMultiLine"
            android:text="Mz 74 LT 7 ENRIQUE MILLA OCHOA"
            android:textSize="16dp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txtReferenciaUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:fontFamily="@font/roboto_thin"
            android:inputType="textMultiLine"
            android:text="CRUCE DE AV. HUANDOY CON AV CENTRAL"
            android:textSize="16dp"
            android:textStyle="bold" />


    </LinearLayout
        >
</androidx.cardview.widget.CardView>
