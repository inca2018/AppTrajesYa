<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/blanco"
    app:cardElevation="2dp"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </TextView>
            <ImageView
                android:id="@+id/ivEliminarUbicacion"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="10"
                android:src="@drawable/ic_boton_delete">
            </ImageView>

        </LinearLayout>

        <TextView
            android:id="@+id/txtDistritoUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:inputType="textMultiLine"
            android:text="LOS OLIVOS"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/txtNombreUbicacion"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="normal"
            android:textSize="16dp"
            android:inputType="textMultiLine"
            android:text="Mz 74 LT 7 ENRIQUE MILLA OCHOA"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/txtReferenciaUbicacion"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            android:textSize="14dp"
            android:inputType="textMultiLine"
            android:text="CRUCE DE AV. HUANDOY CON AV CENTRAL"
            android:layout_margin="2dp"/>


    </LinearLayout
        >
</androidx.cardview.widget.CardView>
