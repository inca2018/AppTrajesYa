<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    android:elevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_carrito_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDD"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:layout_margin="10dp"
                    android:textSize="12sp"
                    android:inputType="textMultiLine"/>
                <ImageButton
                    android:id="@+id/item_carrito_eliminar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:src="@drawable/ic_boton_delete"
                    android:layout_gravity="center"
                    android:background="@color/blanco"
                    android:layout_margin="4dp"
                    />
            </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <ImageView
                 android:id="@+id/item_carrito_foto"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="2"
                 android:src="@drawable/lcd1"
                 android:layout_margin="2dp"/>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:orientation="vertical"
                 android:gravity="center_vertical"
                 android:layout_margin="2dp"
                 android:padding="4dp">


                 <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:gravity="center"
                           android:layout_margin="4dp"
                     android:layout_gravity="center">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:text="Cantidad"
                         android:gravity="center"
                         android:layout_margin="4dp"
                         android:textSize="10sp"/>
                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:background="@color/SinCheck"
                         android:layout_margin="1dp">


                         <androidx.cardview.widget.CardView
                             xmlns:android="http://schemas.android.com/apk/res/android"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_margin="1dp"
                             >
                             <LinearLayout
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:orientation="horizontal"
                                 >

                         <Button
                             android:id="@+id/item_carrito_boton_menos"
                             android:layout_width="35dp"
                             android:layout_height="35dp"
                             android:text="-"
                             android:textStyle="bold"
                             android:textColor="@color/blanco"
                             android:background="@color/SinCheck"/>
                         <TextView
                             android:id="@+id/item_carrito_cantidad"
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:text="10"
                             android:gravity="center"
                             android:layout_marginLeft="10dp"
                             android:layout_marginRight="10dp"
                             android:padding="4dp"
                             android:textStyle="bold"/>
                         <Button
                             android:id="@+id/item_carrito_mas"
                             android:layout_width="35dp"
                             android:layout_height="35dp"
                             android:text="+"
                             android:textStyle="bold"
                             android:textColor="@color/blanco"
                             android:background="@color/SinCheck"/>
                             </LinearLayout>
                         </androidx.cardview.widget.CardView>

                     </LinearLayout>
                     </LinearLayout>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_margin="2dp"
                     android:gravity="center"
                     >

                     <TextView
                         android:id="@+id/item_carrito_precio"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Precio PromociÃ³n: S/ 1200.00"
                         android:textColor="@color/colorPrimary"
                         android:textStyle="bold"
                         android:textSize="14sp"
                         android:layout_margin="2dp"
                         android:textAlignment="textStart"/>
                     <TextView
                         android:id="@+id/item_carrito_descontado"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Precio miCumple: S/ 1000.00"
                         android:layout_margin="2dp"
                         android:textSize="14sp"
                         android:textAlignment="textStart"
                         android:textColor="@color/colorAccent"

                         />
                     <TextView
                         android:id="@+id/item_carrito_desc"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Acumulas 100 puntos"
                         android:layout_margin="2dp"
                         android:textSize="12sp"
                        android:textAlignment="textStart"

                         />

                 </LinearLayout>




             </LinearLayout>



         </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:background="@color/SinCheck">

            </LinearLayout>

          <TextView
              android:id="@+id/item_carrito_cliente"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Enviado y Vendido por: PANASONIC SAC "
              android:layout_margin="10dp"
              android:textSize="12sp"/>







        </LinearLayout>

    </androidx.cardview.widget.CardView>
