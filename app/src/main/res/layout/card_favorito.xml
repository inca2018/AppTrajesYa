<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/favorito_carrito_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDDD"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:layout_margin="10dp"
                    android:textSize="12sp"
                    android:inputType="textMultiLine"/>
                <ImageButton
                    android:id="@+id/favorito_carrito_eliminar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:src="@drawable/ic_boton_delete"
                    android:layout_gravity="center"
                    android:background="@color/blanco"
                    android:layout_margin="4dp"
                    />

            </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <ImageView
                 android:id="@+id/favorito_carrito_foto"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="2"
                 android:src="@drawable/lcd1"
                 android:layout_margin="4dp"/>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:orientation="vertical"
                 android:gravity="center_vertical"
                 android:layout_margin="4dp"
                 android:padding="4dp">

                     <TextView
                         android:id="@+id/favorito_carrito_precio"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="S/ 1200.00"
                         android:textStyle="bold"
                         android:textSize="12sp"
                         android:layout_margin="5dp"
                         android:layout_gravity="center"/>
                 <TextView
                     android:id="@+id/favorito_carrito_precio2"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="S/ 1200.00"
                     android:textColor="@color/colorAccent"
                     android:textStyle="bold"
                     android:textSize="14sp"
                     android:layout_margin="5dp"
                     android:layout_gravity="center"/>
                 <TextView
                     android:id="@+id/favorito_carrito_precio3"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="S/ 1200.00"
                     android:textColor="@color/colorPrimary"
                     android:textStyle="bold"
                     android:textSize="14sp"
                     android:layout_margin="5dp"
                     android:layout_gravity="center"/>

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Entregado en 4 dias"
                     android:layout_margin="10dp"/>


             </LinearLayout>


         </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/favorito_Carrito_agregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar al carrito"
                android:background="@android:color/transparent"
                android:textColor="@color/blanco"
                android:layout_margin="2dp"
                android:textSize="14sp"
                android:drawableLeft="@drawable/ic_carrito_blanco_ofi"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
