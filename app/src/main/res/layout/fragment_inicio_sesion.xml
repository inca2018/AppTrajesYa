<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="inca.jesus.trajesya.Fragmentos.InicioSesion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card1"
            app:cardBackgroundColor="@color/blanco"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inicia Sesión usando tus redes sociales."
                android:textColor="@color/negro"
                android:textSize="12sp"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Este paso te ahorrará tiempo y podrás compartir productos y promociones de forma fácil con tu familia y amigos"
                android:textSize="12sp"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="2"
                   app:cardCornerRadius="15dp"
                   android:background="@color/google"
                   android:backgroundTint="@color/google"
                   app:cardBackgroundColor="@color/google"
                   android:layout_margin="4dp"
                   >
                <Button
                    android:id="@+id/botonSesion"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Google +"
                    android:textStyle="italic"
                    android:textColor="@color/blanco"
                    android:textSize="13sp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_google_icon"
                    android:drawableTint="@color/blanco"
                    android:padding="8dp"
                    android:textAllCaps="false"/>
               </androidx.cardview.widget.CardView>


                <com.facebook.login.widget.LoginButton
                    android:id="@+id/loginButton2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                     />


            </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card2"
            app:cardBackgroundColor="@color/blanco"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/sesion_email"
                            android:inputType="text"
                            android:hint="Email"
                            android:textSize="14dp"
                            android:textColorHint="#9FA8DA"
                            android:textColorLink="@color/colorAccent"
                            android:layout_margin="4dp"
                            tools:ignore="HardcodedText,RtlHardcoded"
                            />


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/login_password_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled = "true"
                    android:layout_margin="4dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/sesion_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contraseña"
                        android:layout_margin="4dp"
                        android:textSize="14dp"
                        android:elevation="10dp"
                        android:textColor="@color/colorAccent"
                        android:imeActionLabel="login"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textColorHint="#9FA8DA"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Olvidé mi contraseña"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:layout_margin="4dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:background="@color/colorAccent"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="4dp">
                <Button
                    android:id="@+id/boton_Inicio_Sesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INICIAR SESIÓN"
                    android:textColor="@color/blanco"
                    android:textSize="16dp"
                    android:background="@android:color/transparent"
                    android:layout_margin="4dp"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>
