<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/blanco"
    android:background="@color/blanco"
    app:cardBackgroundColor="@color/blanco"
    app:cardCornerRadius="12dp"
    android:layout_margin="2dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:fontFamily="sans-serif-condensed"
            android:text="NUEVA UBICACIÓN"
            android:textColor="@color/SinCheck"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Distrito:"
            android:textSize="14sp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spDistrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

        </Spinner>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:passwordToggleTint="@color/colorAccent2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDireccionUbicacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Dirección"
                android:inputType="textMultiLine"
                android:maxLength="250"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:passwordToggleTint="@color/colorAccent2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etReferenciaUbicacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Referencia"
                android:inputType="textMultiLine"
                android:maxLength="250"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/deseo"
            android:background="@color/deseo"
            app:cardBackgroundColor="@color/deseo"
            app:cardCornerRadius="12dp"
            android:layout_margin="4dp">

            <Button
                android:id="@+id/btnRegistrarUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="AGREGAR UBICACIÓN"
                android:textSize="16dp"
                android:textColor="@color/blanco"
                android:background="@android:color/transparent"
                android:layout_margin="2dp"
                android:padding="8dp"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.cardview.widget.CardView>
