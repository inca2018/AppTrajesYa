<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <include android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/menu_principal">
        </include>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:visibility="gone"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_base"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            tools:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            tools:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:elevation="40dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                >

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/ope_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_inicio_menu"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/transparent"
                        />
                    <TextView
                        android:id="@+id/opt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Inicio"
                        android:textColor="@color/blanco"
                        android:textSize="10sp"
                        android:layout_margin="2dp"

                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/ope_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_categoria3"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/transparent"/>
                    <TextView
                        android:id="@+id/opt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Categorias"
                        android:textColor="@color/noFocus"
                        android:textSize="10sp"
                        android:layout_margin="2dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/ope_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_favoritos3"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/transparent"/>
                    <TextView
                        android:id="@+id/opt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Deseos"
                        android:textColor="@color/noFocus"
                        android:textSize="10sp"
                        android:layout_margin="2dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/ope_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_carrito3"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/transparent"/>
                    <TextView
                        android:id="@+id/opt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Carrito"
                        android:textColor="@color/noFocus"
                        android:textSize="10sp"
                        android:layout_margin="2dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/ope_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_perfil3"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/transparent"/>
                    <TextView
                        android:id="@+id/opt5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Perfil"
                        android:textColor="@color/noFocus"
                        android:textSize="10sp"
                        android:layout_margin="2dp"
                        />

                </LinearLayout>


            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scroll_Item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card1"
        app:cardBackgroundColor="@color/blanco"
        android:layout_margin="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/item_det_nombreProd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMBRE DEL PRODUCTO"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_margin="4dp"
                android:inputType="textMultiLine"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:layout_weight="1.2">
                <inca.jesus.trajesya.Clases.CarouselView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/pictureplay"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:layout_gravity="center"
                            />
                        <LinearLayout
                            android:id="@+id/viewGroup"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|right">
                            <RadioGroup
                                android:id="@+id/page_cusor_radioGroup"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center"
                                ></RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Características:"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/item_descri"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed eiusmod tempor incidunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquid ex ea commodi consequat. Quis aute iure reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint obcaecat cupiditat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                                android:textAlignment="textStart"
                                android:layout_margin="2dp"
                                android:textSize="10sp"
                                android:inputType="textMultiLine"
                                />
                            <TextView
                                android:id="@+id/boton_detalles"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Detalles del producto"
                                android:textColor="@color/colorAccent"
                                android:layout_margin="2dp"
                                android:textSize="12sp"
                                android:textAlignment="textStart"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tiempo de Entrega de 5 a 7 dias"
                                android:textColor="@color/negro"
                                android:textAlignment="textStart"
                                android:textSize="12sp"
                                android:layout_margin="2dp"/>

                        </LinearLayout>


                    </LinearLayout>

                </inca.jesus.trajesya.Clases.CarouselView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:layout_weight="1">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAlignment="textStart"
                        android:text="Vendido por:"
                        android:textSize="10sp"
                        android:textColor="@color/negro"
                        android:layout_margin="2dp"
                        />

                    <TextView
                        android:id="@+id/text_vendedor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAlignment="textStart"
                        android:text="PANASONIC"
                        android:textSize="12sp"
                        android:layout_margin="2dp"

                        />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/item_descontado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Precio normal: s/ 100,00"
                    android:textSize="12sp"
                    android:textAlignment="textStart"
                    android:layout_margin="2dp"

                    />
                    <TextView
                        android:id="@+id/item_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Precio Promocióm: s/ 100,00"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        android:layout_margin="2dp"

                        />


                    <TextView
                        android:id="@+id/item_precio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Precio miCumple: s/100,00"
                        android:textSize="14sp"
                        android:textColor="@color/colorAccent"
                        android:layout_margin="2dp"
                        android:textAlignment="textStart"
                        android:textStyle="bold"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        android:backgroundTint="#e3f2fd"
                        app:cardBackgroundColor="#e3f2fd"
                        android:elevation="5dp"
                        android:layout_margin="4dp">
                    <TextView
                        android:id="@+id/item_puntos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Acumulas:  100 Puntos"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:textColor="@color/negro"
                        />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Colores:"
                    android:layout_margin="2dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_colores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp">

                </androidx.recyclerview.widget.RecyclerView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tallas:"
                    android:layout_margin="2dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_tallas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp">

                </androidx.recyclerview.widget.RecyclerView>

               </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Cantidad:"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="2dp"
                        android:elevation="10dp"
                        android:backgroundTint="#e3f2fd"
                        android:background="#e3f2fd"
                        app:cardBackgroundColor="#e3f2fd"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <Button
                                android:id="@+id/menos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="16sp"
                                android:text="-"
                                android:textStyle="bold"
                                android:textColor="@color/negro"
                                android:background="@android:color/transparent"/>
                            <TextView
                                android:id="@+id/cantidad"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="10"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:background="@color/blanco"/>
                            <Button
                                android:id="@+id/mas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="16sp"
                                android:text="+"
                                android:textStyle="bold"
                                android:textColor="@color/negro"
                                android:background="@android:color/transparent"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@color/colorPrimary"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="2dp">

                <Button
                    android:id="@+id/item_boton_add_carrito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="CARRITO"
                    android:textSize="16dp"
                    android:textColor="@color/blanco"
                    android:background="@android:color/transparent"
                    android:layout_margin="2dp"
                    android:drawableLeft="@drawable/ic_carrito_blanco_ofi"
                    android:padding="8dp"
                    />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="2dp">
                <Button
                    android:id="@+id/boton_comprar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="COMPRAR"
                    android:textSize="16dp"
                    android:textColor="@color/blanco"
                    android:background="@android:color/transparent"
                    android:layout_margin="2dp"
                    />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/deseo"
                    android:background="@color/deseo"
                    app:cardBackgroundColor="@color/deseo"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="2dp">
                    <Button
                        android:id="@+id/boton_Deseos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="Agregar a mis Deseos"
                        android:textSize="16dp"
                        android:textColor="@color/blanco"
                        android:background="@android:color/transparent"
                        android:layout_margin="2dp"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                android:padding="6dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="Disponibles en :"
                android:textColor="@color/negro"
                android:gravity="center"
                android:layout_marginTop="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Retirado de Tienda"
                    android:textSize="12sp"
                    android:textColor="@color/negro"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_inicio3"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Delivery"
                    android:textColor="@color/negro"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:drawableLeft="@drawable/ic_envio"/>

            </LinearLayout>
        </LinearLayout>

        </androidx.cardview.widget.CardView>



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >



            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="ARTICULOS RELACIONADOS"
                android:layout_margin="4dp"
                android:textColor="@color/negro"
                android:textSize="16sp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_item"
                android:layout_margin="4dp">
            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="ARTICULOS VENDIDOS POR PROVEEDOR"
                android:layout_margin="4dp"
                android:textColor="@color/negro"
                android:textSize="16sp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_proveedor"
                android:layout_margin="4dp">
            </androidx.recyclerview.widget.RecyclerView>

           </LinearLayout>

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_resena"
                app:cardBackgroundColor="@color/blanco"
                android:layout_margin="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">
                    <RatingBar
                        android:id="@+id/item_resena_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:isIndicator="true"
                        android:progressTint="#FDDB39"
                        android:progressBackgroundTint="@color/colorAccent"
                        android:rating="5"
                        android:secondaryProgressTint="#FDDB39"
                        android:layout_margin="5dp"
                        />
                    <TextView
                        android:id="@+id/item_resena_cantidad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:textAlignment="textStart"
                        android:text="(14) CALIFICACIONES"
                        android:textSize="14dp"
                        android:layout_margin="5dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_boton_adelante"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_nueva_resena"
                app:cardBackgroundColor="@color/blanco"
                android:layout_margin="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/pencil"
                        android:layout_margin="2dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:textAlignment="textStart"
                        android:text="NUEVA CALIFICACIÓN"
                        android:textSize="14dp"
                        android:layout_margin="4dp"
                        android:paddingLeft="15dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_boton_adelante"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>